{
  "manifest_version": 3,
  "name": "Real-Time Audio Transcript",
  "version": "1.0.0",
  "description": "Capture audio from browser tabs and provide real-time transcription with a user-friendly sidepanel interface",
  "permissions": [
    "tabCapture",
    "activeTab",
    "tabs",
    "sidePanel",
    "storage"
  ],
  "optional_permissions": [
  ],
  "host_permissions": [
    "https://speech.googleapis.com/*",
    "https://api.openai.com/*",
    "https://api.deepgram.com/*",
    "https://api.fireworks.ai/*",
    "https://*.googleapis.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Real-Time Audio Transcript",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidepanel.html", "sidepanel.js", "sidepanel.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
